@model AgriCulturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Mail Adresi</label>
                    <input type="email" class="form-control" id="exampleInputName1" placeholder="Mail adresinizi giriniz." asp-for="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Telefon Numarası</label>
                    <input type="tel" class="form-control" id="exampleInputEmail3" placeholder="Telefon numaranızı giriniz" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Yeni şifrenizi giriniz" asp-for="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Şifre Tekrarı</label>
                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Yeni şifreyi tekrardan  giriniz" asp-for="ConfirmPassword">
                </div>

                <button type="submit" class="btn btn-info me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>



