@using EntityLayer.Concrete
@model Announcement
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyuru Güncelleme Sayfası</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.Id)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görsel Yolu</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Görsel Yolu" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama</label>
                    <textarea cols="30" rows="5" class="form-control" id="exampleInputEmail3" placeholder="Acıklama" asp-for="Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Tarih</label>
                    <input type="date" class="form-control" id="exampleInputName1" placeholder="Tarih Giriniz" asp-for="Date">
                </div>
                <button type="submit" class="btn btn-info me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

