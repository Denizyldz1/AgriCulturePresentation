@using EntityLayer.Concrete
@model Announcement
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Duyuru Girişi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görsel Yolu</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="/web/images/b1.jpg formatında olmak zorunda" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Div Url</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="img1 gibi Görsel yolunda b den sonra gelen sayı ile aynı olmalı" asp-for="DivClass">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama</label>               
                    <textarea cols="30" rows="5" class="form-control" id="exampleInputEmail3" placeholder="Acıklama" asp-for="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-info me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

